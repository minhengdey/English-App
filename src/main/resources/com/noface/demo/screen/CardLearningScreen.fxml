<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<VBox fx:id="root" alignment="BOTTOM_CENTER" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" stylesheets="@CardLearningScreenStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane prefWidth="588.0" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="doneLearningLabel" text="Congratiulations, you have done learning." />
            <VBox fx:id="mainLearningArea" StackPane.alignment="CENTER">
               <children>
                  <SplitPane dividerPositions="0.5" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                     <items>
                        <VBox fx:id="cardViewContainer" alignment="TOP_CENTER" prefHeight="326.0" prefWidth="600.0" styleClass="web-view-vbox">
                           <children>
                              <VBox alignment="CENTER" styleClass="vbox-web-view" VBox.vgrow="ALWAYS">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <children>
                                    <WebView fx:id="frontView" prefHeight="200.0" prefWidth="200.0" styleClass="custom-web-view" />
                                 </children>
                              </VBox>
                              <VBox styleClass="vbox-web-view" VBox.vgrow="ALWAYS">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <children>
                                    <WebView fx:id="backView" prefHeight="200.0" prefWidth="200.0" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        <VBox styleClass="web-view-vbox">
                           <children>
                              <TextArea prefHeight="419.0" prefWidth="297.0" styleClass="text-area" />
                           </children>
                        </VBox>
                     </items>
                  </SplitPane>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Button fx:id="cardEditButton" mnemonicParsing="false" prefHeight="32.0" prefWidth="92.0" text="Edit">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin></Button>
                        <StackPane fx:id="bottomButtonBar" prefHeight="35.0" prefWidth="547.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button fx:id="showAnswerButton" mnemonicParsing="false" text="Show" />
                              <HBox fx:id="doneButtonBar" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" />
                           </children>
                        </StackPane>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</VBox>
