<VBox alignment="BOTTOM_CENTER" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.noface.demo.view.CardView">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Home">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <VBox fx:id="cardViewContainer" alignment="TOP_CENTER" prefHeight="326.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <children>
            <WebView fx:id="frontView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <WebView fx:id="backView" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <HBox fx:id="bottomButtonBar" alignment="CENTER" prefHeight="49.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" text="Easy (5 days)">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button layoutX="284.0" layoutY="48.0" mnemonicParsing="false" text="Medium (3 days)">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button layoutX="320.0" layoutY="48.0" mnemonicParsing="false" text="Hard (1 days)">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button layoutX="346.0" layoutY="48.0" mnemonicParsing="false" text="Super Hard (1 hour)">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
