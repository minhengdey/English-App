                     </children>
                  </HBox>
                  <Button fx:id="addTopicButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" text="Add" />
               </children>
            </HBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="topicBarPane" alignment="TOP_CENTER" prefHeight="500.0" prefWidth="690.0" styleClass="custom-vbox" />
               </content>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </ScrollPane>
         </children>
      </VBox>
   </children>
